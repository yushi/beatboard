BB_UI_HOME=/usr/bb/htdocs
install:
	mkdir -p $(BB_UI_HOME)
	install -m644 favicon.ico $(BB_UI_HOME)
	install -m644 apple-touch-icon.png $(BB_UI_HOME)
	install -m644 bb.css $(BB_UI_HOME)
	install -m644 bb_iphone.css $(BB_UI_HOME)
	install -m644 index.html $(BB_UI_HOME)
	install -m644 index_freenode.html $(BB_UI_HOME)
	install -m644 join_channel.html $(BB_UI_HOME)
	install -m644 send_message.html $(BB_UI_HOME)
	install -m644 jquery-1.3.2.min.js $(BB_UI_HOME)
	install -m644 jquery.cookie.js $(BB_UI_HOME)
	install -m644 jquery.blockUI.js.v2.26 $(BB_UI_HOME)
	install -m644 bbapi.js $(BB_UI_HOME)
	install -m644 bbui.js $(BB_UI_HOME)
	install -m644 init_standard.js $(BB_UI_HOME)
	install -m644 init_freenode.js $(BB_UI_HOME)
	cp -r ui $(BB_UI_HOME)

